{
  "name": "api-clean-architecture",
  "version": "1.2.4",
  "description": "",
  "main": "main.js",
  "scripts": {
    "start:server": "node dist/main/main.js",
    "build": "tsc",
    "tsc:watch": "tsc --watch",
    "node:watch": "node --watch dist/main/main.js",
    "debug": "node --inspect=0.0.0.0:9222 --nolazy dist/main/main.js",
    "start:local": "ts-node src/main/main.ts",
    "lint:staged": "lint-staged",
    "test": "jest --passWithNoTests --runInBand",
    "test:simplified": "npm test -- --silent --noStackTrace --coverage=false",
    "test:staged": "npm test -- --findRelatedTests",
    "test:watch": "npm test -- --watch --noStackTrace --silent",
    "test:unit": "npm test -- --noStackTrace --silent -c jest-unit.config.ts",
    "test:integration": "npm test -- --noStackTrace --silent -c jest-integration.config.ts",
    "docker:build": "docker build -t guimassoqueto/node-api . --quiet"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^17.6.1",
    "@commitlint/config-conventional": "^17.6.1",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.1",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/node": "^18.15.12",
    "@types/supertest": "^2.0.12",
    "@types/validator": "^13.7.15",
    "eslint-config-standard-with-typescript": "^34.0.1",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "bcrypt": "^5.1.0",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "fast-glob": "^3.2.12",
    "jsonwebtoken": "^9.0.0",
    "mongodb": "^5.3.0",
    "validator": "^13.9.0",
    "winston": "^3.8.2"
  },
  "engines": {
    "node": "19.x"
  }
}